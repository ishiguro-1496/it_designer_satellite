      <?php 
function it_designer_scripts() {
  //reset.css
  wp_enqueue_style( 'it_designer_reset', get_template_directory_uri() . '/static/css/reset.css' );
  //slick.css
  wp_enqueue_style( 'it_designer_slick', get_template_directory_uri() . '/static/slick/slick.css' );
  //slick-theme.css
  wp_enqueue_style( 'it_designer_slick-theme', get_template_directory_uri() . '/static/slick/slick-theme.css' );
  //style.css
   wp_enqueue_style( 'it_designer_style', get_template_directory_uri() . '/static/css/style.css' );
  //wpのjquery停止
  wp_deregister_script('jquery');
  wp_enqueue_script( 'jquery','//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js', array(), NULL, true );
  //js jquery
  wp_enqueue_script( 'it_designer_jquery', get_theme_file_uri( '/js/jquery-3.3.1.min.js') ); 
  //slick.min.js
  wp_enqueue_script( 'it_designer_silck.min', get_theme_file_uri( '/static/slick/slick.min.js') ); 
  //googlefont
  wp_enqueue_style( 'google-webfont-style', '//fonts.googleapis.com/css?family=Comfortaa&display=swap');
  //fontawesome
  wp_enqueue_style( 'fontawesome', '//use.fontawesome.com/releases/v5.6.1/css/all.css');

}
add_action( 'wp_enqueue_scripts', 'it_designer_scripts');


function it_designer_setup() {
  //nav
  register_nav_menu( 'header-nav',  ' ヘッダーナビゲーション ' );
  register_nav_menu( 'footer-nav',  ' フッターナビゲーション ' );
  //アイキャッチ画像を使う
  add_theme_support( 'post-thumbnails' );
  //アイキャッチ画像のサイズを設定
  set_post_thumbnail_size(300,300);
}
add_action( 'after_setup_theme', 'it_designer_setup' );


function widgets_area() {
  //wiget
  register_sidebar(array(
      'name'=>'サイドバー',
      'id' => 'side-widget',
      'description'   => '管理画面に表示するウィジェットを追加します。',
      'before_widget'=>'<section id="%1$s" class="widget %2$s">',
      'after_widget'=>'</section>',
      'before_title' => '<p class="widget-title">',
      'after_title' => '</p>'
      ));
}
add_action( 'widgets_init', 'widgets_area' );


function add_favicon() {
  // ファビコン
  echo '<link rel="shortcut icon" href=" ' . get_template_directory_uri() . '/static/favicon.ico" type="image/x-icon" />' . "\n";
}
add_action('wp_head', 'add_favicon');


